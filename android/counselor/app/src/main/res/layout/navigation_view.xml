            android:layout_height="56dp"
            android:layout_gravity="start"
            android:background="@drawable/layout_blue_gradient"
            app:menu="@menu/navigation_menu"/>
    </FrameLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>