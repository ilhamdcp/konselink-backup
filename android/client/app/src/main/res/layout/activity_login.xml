<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/layout_blue_gradient">

    <TextView
        android:id="@+id/text_placeholder_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/placeholder_login_page"
        android:textColor="@color/white"
        android:textSize="28sp"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp"
        app:layout_constraintBottom_toTopOf="@id/button_sso_login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/button_sso_login"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:src="@drawable/button_sso_login"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_placeholder_login" />

</androidx.constraintlayout.widget.ConstraintLayout>